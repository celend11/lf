<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yindongxunjian"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

   <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:name=".RiskPatrolApplication"
            android:theme="@style/AppTheme"
            >
        <activity android:name=".activity.SplashActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--主页-->
        <activity android:name=".activity.MainActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <!--首页-->
        <activity android:name=".activity.HomeActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--我的汇总-->
        <activity android:name=".activity.MyCollectActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--配置-->
        <activity android:name=".activity.SetupActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--登录-->
        <activity android:name=".activity.LoginActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--创建检查单-->
        <activity android:name=".activity.CreateCheckPointActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--受检负责人-->
        <activity android:name=".activity.AcceptCheckOfLeaderActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--受检项目-->
        <activity android:name=".activity.AcceptCheckOfProjectActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--受检区域-->
        <activity android:name=".activity.AcceptCheckOfAreaActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--受检结果录入-->
        <activity android:name=".activity.CheckResultActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--添加隐患说明-->
        <activity android:name=".activity.AddHiddenDescActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--检查结果详情填写-->
        <activity android:name=".activity.CheckResultDetailActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--添加检查项-->
        <activity android:name=".activity.AddCheckProjectActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--创建专项检查单-->
        <activity android:name=".activity.CreateProperCheckPointActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--查看检查单-->
        <activity android:name=".activity.ShowCheckDocumentActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--查看结果详情-->
        <activity android:name=".activity.ShowCheckResultDetailActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--我的汇总列表页-->
        <activity android:name=".activity.MyCollectListActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!--受检项目列表形式-->
        <activity android:name=".activity.AcceptCheckOfProjectListActivity"
                  android:screenOrientation="portrait">
        </activity>


        <!--图片剪裁-->
        <activity android:name=".activity.CropActivity"
                  android:screenOrientation="portrait">
        </activity>
        <!--图片剪裁-->
        <activity android:name=".activity.CropImageActivity"
                  android:screenOrientation="portrait">
        </activity>

        <service android:name=".service.AutoSaveService"/>

    </application>

</manifest>

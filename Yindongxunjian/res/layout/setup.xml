<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bottom_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <!--<include layout="@layout/current_user"/>-->

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">
        <TextView
                android:text="图片质量"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_gravity="center_vertical"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center_vertical"
                android:checkedButton="@+id/setup_image_rb1"
                android:layout_height="match_parent">
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:background="@drawable/hing_radio_iamge"
                    android:button="@null"
                    android:layout_margin="@dimen/dp1"
                    android:padding="@dimen/dp2"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/dp2"
                    android:layout_margin="@dimen/dp1"
                    android:background="@drawable/middle_radio_iamge"
                    android:button="@null"
                    android:id="@+id/setup_image_rb1"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/dp2"
                    android:layout_margin="@dimen/dp1"
                    android:background="@drawable/low_radio_iamge"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RadioGroup>
    </LinearLayout>

    <include layout="@layout/line_all"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp55">
        <TextView
                android:text="录音质量"
                android:layout_marginLeft="@dimen/dp10"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp16"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center_vertical"
                android:checkedButton="@+id/setup_record_rb1"
                android:layout_height="match_parent">
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:background="@drawable/hing_radio_iamge"
                    android:button="@null"
                    android:layout_margin="@dimen/dp1"
                    android:padding="@dimen/dp2"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/dp2"
                    android:background="@drawable/middle_radio_iamge"
                    android:button="@null"
                    android:layout_margin="@dimen/dp1"
                    android:id="@+id/setup_record_rb1"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    style="@style/editTextStyle"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/dp2"
                    android:layout_margin="@dimen/dp1"
                    android:background="@drawable/low_radio_iamge"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RadioGroup>
    </LinearLayout>

    <include layout="@layout/line_all"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp55">
        <TextView
                android:text="风险库更新"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <TextView
                android:text="2015-10-8"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                style="@style/editTextStyle"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/version_new"
                android:padding="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <include layout="@layout/line_all"/>

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">
        <TextView
                android:text="wifi下自动更新风险库"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        <ImageView
                android:src="@drawable/open"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp40"/>
    </LinearLayout>

    <include layout="@layout/line_all"/>


    <ImageView
            android:src="@drawable/logout_selector"
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/setup_logout"
            android:layout_margin="@dimen/dp10"
            android:layout_height="@dimen/dp55"/>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/combo_title_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55"
        android:background="@drawable/common_oblique_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:src="@drawable/home_icon_day" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_name"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="日常检查(%s)"
                android:textColor="#727272" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/finsh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="已完成(20)"
                    android:textColor="#00ff00" />

                <TextView
                    android:id="@+id/unfinsh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="未完成(20)"
                    android:textColor="#ff0000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e6e6e6" />

    <com.android.sunning.riskpatrol.custom.CollapsibleLinearLayout
        android:id="@+id/combo_products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </com.android.sunning.riskpatrol.custom.CollapsibleLinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60">
    <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue_bgk_color"
            android:id="@+id/home_my_task_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/home_my_task_im"
                android:src="@drawable/index_tab_icon_task"
                />
        <TextView
                android:text="我的任务"
                android:textColor="@color/blue_bgk_text_color"
                android:gravity="center"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp18"
                android:id="@+id/home_my_task_tv"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/unselected_bgk_color"
            android:id="@+id/home_my_history_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/home_my_history_im"
                android:src="@drawable/index_tab_icon_history_unselect"
                />
        <TextView
                android:text="安全检查历史"
                android:layout_marginLeft="@dimen/dp10"
                style="@style/textStyleSmall"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:id="@+id/home_my_history_tv"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e6e6e6" />

    <LinearLayout
            android:id="@+id/combo_title_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:background="@drawable/common_oblique_bg"
            android:orientation="horizontal" >


        <TextView
                android:id="@+id/company_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="子公司一"
                style="@style/textStyle"
                android:textSize="@dimen/sp16"
                />

        <ImageView
                android:layout_width="@dimen/dp50"
                android:padding="@dimen/dp10"
                android:id="@+id/accept_check_leader_up_arrow"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/up_arrow" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e6e6e6" />

    <com.android.sunning.riskpatrol.custom.CollapsibleLinearLayout
            android:id="@+id/accept_check_project_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    </com.android.sunning.riskpatrol.custom.CollapsibleLinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:background="@color/white"
            android:id="@+id/accept_check_project_parent"
            android:baselineAligned="false">

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/inner_check_box_selector"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/accept_check_project_ck"
                android:layout_marginRight="@dimen/dp10"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:id="@+id/add_check_project_child_item_tv"
                android:layout_toLeftOf="@id/accept_check_project_ck"
                android:text="施工区域1-分项工程1"
                android:layout_marginLeft="@dimen/dp10"
                style="@style/textStyle"
                android:textSize="@dimen/sp16"/>


    </RelativeLayout>

    <include layout="@layout/line"/>

</LinearLayout>

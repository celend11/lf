<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/blue_bgk_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">
        <TextView
                android:text="自定义"
                style="@style/textStyle"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp16"
                android:textColor="@color/blue_bgk_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <include layout="@layout/get_custom_view_edit"/>
        <include layout="@layout/get_custom_view_edit"/>
        <include layout="@layout/get_custom_view_edit"/>

    </LinearLayout>

    <ImageView
            android:src="@drawable/add_again_selector"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="@dimen/dp100"
            android:clickable="true"
            android:layout_height="@dimen/dp55"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:clickable="true"
            android:layout_margin="@dimen/dp10"
            android:src="@drawable/submit_big_selector"/>


</LinearLayout>
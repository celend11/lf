<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="@dimen/dp60">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/tab_border"
            />

    <LinearLayout
            android:id="@+id/main_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/radio_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:padding="@dimen/dp5"
                android:layout_weight="1.0"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:onClick="clickBottom"
                android:src="@drawable/tab_home_press">
        </ImageView>

        <View android:layout_width="@dimen/px1"
              android:layout_height="match_parent"
              android:background="@color/bottom_tab_line_color"/>


        <ImageView
                android:id="@+id/radio_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:padding="@dimen/dp5"
                android:layout_weight="1.0"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:onClick="clickBottom"
                android:src="@drawable/tab_my_collect">
        </ImageView>

        <View android:layout_width="@dimen/px1"
              android:layout_height="match_parent"
              android:background="@color/bottom_tab_line_color"/>

        <ImageView
                android:id="@+id/radio_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:padding="@dimen/dp5"
                android:layout_weight="1.0"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:onClick="clickBottom"
                android:src="@drawable/tab_setup">
        </ImageView>

    </LinearLayout>
</FrameLayout>
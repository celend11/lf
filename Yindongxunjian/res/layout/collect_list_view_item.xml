<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="@dimen/dp65">
    <ImageView
            android:src="@drawable/home_icon_day"
            android:layout_width="wrap_content"
            android:padding="6dip"
            android:id="@+id/collect_list_item_icon"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="日常检查"
                android:layout_weight="1"
                style="@style/editTextStyle"
                android:textColor="@color/main_text_color"
                android:id="@+id/collect_list_item_title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dip"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip">
            <TextView
                    android:id="@+id/collect_list_item_finished"
                    android:text="已完成数(%s)"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp14"
                    style="@style/editTextStyle"
                    android:textColor="#00913a"
                    android:gravity="center_vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/collect_list_item_unfinished"
                    android:text="未完成数(%s)"
                    android:textSize="@dimen/sp14"
                    style="@style/editTextStyle"
                    android:textColor="#07afea"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
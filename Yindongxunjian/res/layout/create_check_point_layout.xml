<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bottom_gray"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/common_title"/>

    <ScrollView
            
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="创建日常检查"
                    android:background="@color/blue_bgk_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:id="@+id/create_check_subtitle"
                    style="@style/textStyleSmall"
                    android:textColor="@color/blue_bgk_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/accept_check_project_parent_id"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="受检项目"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyle"
                        android:text="*"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                <TextView
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:text="请选择"
                        android:id="@+id/accept_check_project_tv_id"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <include layout="@layout/line_all"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/accept_check_time_parent_id"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="检查时间"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:text="*"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                <TextView
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:id="@+id/showdate"
                        android:text="2015-02-14"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <include layout="@layout/line_all"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/accept_check_leader_parent_id"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="检查负责人"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyle"
                        android:text="*"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                <TextView
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:id="@+id/create_check_point_leaderName_name_id"
                        android:text="请选择"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <include layout="@layout/line_all"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/accept_check_area_parent_id"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="检查区域"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyle"
                        android:text="*"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                 <TextView
                        android:id="@+id/creat_area"
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:text="请选择"
                        android:singleLine="true"
                        android:ellipsize="end"
                        /> 

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <include layout="@layout/line_all"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/canjia_renyuan"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="参与人员"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyle"
                        android:text="*"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                <TextView
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:text="填写参与人员"
                       	android:id="@+id/canjiarenyuan"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <include layout="@layout/line_all"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/create_check_point_comment"
                    android:background="@drawable/list_view_item_selecter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="备注"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textStyle"
                        android:text="*"
                        android:layout_marginLeft="@dimen/dp3"
                        android:textColor="@color/red"
                        />
                <TextView
                    	android:id="@+id/accept_beizhu"
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        style="@style/editTextStyle"
                        android:text="填写备注,100汉字以内"
                        android:singleLine="true"
                        android:maxLength="100"
                        android:ellipsize="end"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@drawable/arrow_right_icon"/>
            </LinearLayout>

            <ImageView
                    android:src="@drawable/next_setp_selector"
                    android:id="@+id/next_step_btn_id"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/dp10"
                    android:layout_height="@dimen/dp55"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
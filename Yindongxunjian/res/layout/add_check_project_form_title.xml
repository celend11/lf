<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/blue_bgk_color"
            android:id="@+id/add_check_project_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">

        <CheckBox
                android:button="@drawable/inner_check_box_selector"
                android:gravity="center_vertical"
                android:id="@+id/add_check_project_parent_cb"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"/>

        <TextView
                android:text="全选"
                style="@style/textStyle"
                android:layout_toLeftOf="@id/add_check_project_parent_cb"
                android:layout_marginRight="@dimen/dp5"
                android:textSize="@dimen/sp16"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/blue_bgk_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:text="分布工程1"
                style="@style/textStyle"
                android:textSize="@dimen/sp16"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/blue_bgk_text_color"
                android:id="@+id/add_check_project_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


    </RelativeLayout>


</LinearLayout>